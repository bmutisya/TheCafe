<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:id="@+id/back2"
        android:src="@drawable/food"/>
    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/background_shape"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.478">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:src="@drawable/thecafe"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Eat Homemade Anywhere !"
            android:textAlignment="center"
            android:textSize="17sp"
            android:padding="20dp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/signWithEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnred"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text="SignIn With Email"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/signWithPhone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnblueish"
            android:text="SignIn With Phone"
            android:drawableLeft="@drawable/ic_phone"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/hr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/darkgray" />

            <TextView
                android:id="@+id/or"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:text="OR"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TableRow
                android:id="@+id/dr"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/darkgray" />


        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Signup"
            android:id="@+id/signup"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>